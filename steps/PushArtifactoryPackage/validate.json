{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://jfrog.com/cicd/steps/step.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["PushArtifactoryPackage"]
    },
    "configuration": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "affinityGroup": {
          "type": "string"
        },
        "timeoutSeconds": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "nodePool": {
          "type": "string"
        },
        "chronological": {
          "type": "boolean"
        },
        "targetRepo": {
          "type": "string"
        },
        "forceXrayScan": {
          "type": "boolean"
        },
        "autoPublishBuildInfo": {
          "type": "boolean"
        },
        "npmArgs": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "recursive": {
          "type": "boolean"
        },
        "self": {
          "type": "boolean"
        },
        "deps": {
          "type": "boolean"
        },
        "integrations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "inputSteps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "inputResources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "trigger": {
                "type": "boolean"
              }
            },
            "additionalProperties": false
          }
        },
        "outputResources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["targetRepo"]
    },
    "setup": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "push": {
          "type": "object",
          "properties": {
            "targetRepo": {
              "type": "string"
            },
            "publish": {
              "type": "boolean"
            },
            "scan": {
              "type": "boolean"
            }
          },
          "additionalProperties": false,
          "required": []
        },
        "environmentVariables": {
          "type": "object",
          "properties": {
            "normal": {
              "type": "object",
              "additionalProperties": {
                "type": ["string", "number"]
              }
            }
          }
        },
        "runtime": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["image", "host"]
            },
            "image": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "auto": {
                  "type": "object",
                  "required": ["language"],
                  "properties": {
                    "language": {
                      "type": "string"
                    },
                    "versions": {
                      "type": "array",
                      "items":  {
                        "type": "string"
                      }
                    }
                  }
                },
                "custom": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["name", "tag"],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "tag": {
                      "type": "string"
                    },
                    "options": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "required": ["type"]
        }
      }
    },
    "execution": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "onStart": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "onSuccess": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "onFailure": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "onComplete": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "onCancel": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "name",
    "type"
  ],
  "additionalProperties": false
}
