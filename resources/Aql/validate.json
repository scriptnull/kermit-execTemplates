{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://jfrog.com/pipelines/resources/Aql.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["Aql"]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "sourceArtifactory": {
          "type": "string"
        },
        "query": {
          "type": "string"
        },
        "addedProperties": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number"]
          }
        },
        "mappings": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "input": {
                "type": "string"
              },
              "output": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["query", "sourceArtifactory"]
    }
  },
  "required": ["name", "type", "configuration"]
}
